<div class="modal fade bootsy-modal" tabindex="-1" role="dialog"
  data-no-turbolink data-gallery-id="<%= container.bootsy_image_gallery_id %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title"><%= t 'bootsy.image.p' %></h6>        
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <div class="alert alert-info bootsy-empty-alert">
          <%= t 'bootsy.no_images_uploaded' %>
        </div>

        <div id="select-image-window" class="row bootsy-gallery"></div>

        <%# Check %>
        <div id="link-image-window" class="container px-3 d-none">
          <div class="row mb-2">
            <%= text_field_tag 'image-link-input', nil, placeholder: 'Paste image URL here', class: 'form-control' %>
          </div>
          <div class="row justify-content-end">
            <%= button_tag 'ok', type: 'button', class: 'btn btn-secondary mr-2' %>
            <%= button_tag 'cancel', type: 'button', class: 'btn btn-secondary' %>
          </div>
        </div>
        <%#%>

        <%= render 'bootsy/images/loader', image_class: 'bootsy-gallery-loader' %>

        <%= refresh_btn %>
      </div>

      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
